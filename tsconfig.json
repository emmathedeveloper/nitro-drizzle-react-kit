{
  "extends": [
    "nitro/tsconfig"
  ],
  "compilerOptions": {
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}